<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stryker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1565C0</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:textViewStyle">@style/MonsText</item>
        <item name="android:buttonStyle">@style/MonsButton</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MonsText" parent="android:TextAppearance.Material.Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>

    <style name="MonsButton" parent="android:TextAppearance.Material.Button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Theme.Stryker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.stryker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.stryker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="itemIconTint">@color/item_color</item>
        <item name="itemTextColor">@color/item_color</item>
        <item name="itemShapeFillColor">@color/selected</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorPrimary">@color/purple_700</item>

    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_rectangle</item>
    </style>
</resources>