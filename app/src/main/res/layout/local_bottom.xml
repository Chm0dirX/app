<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="15dp"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="150dp"
    android:layout_height="8dp"
    android:background="@drawable/rectangle"
    android:layout_gravity="center"

    android:layout_marginTop="8dp"/>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/device_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/devices_other"
            app:tint="#606060" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:id="@+id/port_count"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/ubuntu"
            android:gravity="center"
            android:text="5"
            android:textColor="#606060"
            android:textSize="30dp" />

    </RelativeLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/device_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/ubuntu"
        android:text="192.168.1.1"
        android:textSize="30dp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/device_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/ubuntu"
        android:text="MAC adress"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textIsSelectable="true"
        android:textSize="15dp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/device_os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/ubuntu"
        android:text="OS: Unknown"
        android:layout_marginTop="5dp"
        android:textIsSelectable="true"
        android:textSize="15dp" />
</LinearLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:layout_width="match_parent"
        app:el_duration="50"
        app:el_expanded="true"
        android:layout_marginTop="5dp"
        android:id="@+id/expand_device_actions"
        app:el_parallax="0.5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/gues_os"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/guess_os"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Try to guess OS"
            android:textSize="20dp" />

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/smb_check"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/check_smb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Check SMB for vulnerabilities"
                    android:textSize="20dp" />

            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/scan_rdp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/check_rdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Check RPD for vulnerabilities"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/check_camera"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/check_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Check camera vulnerabilities"
            android:textSize="20dp" />

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/admin_panel"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/check_admin_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/ubuntu"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Check admin panel vulnerabilities"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
</LinearLayout>