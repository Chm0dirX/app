<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    android:id="@+id/local_item"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="5dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="18dp"
    app:strokeWidth="1px"
    app:strokeColor="#DA515151"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/port_layout"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/local_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:tint="#606060"
                android:src="@drawable/devices_local"
                />

            <TextView
                android:id="@+id/local_ports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:text="Ports: "

                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout></com.facebook.shimmer.ShimmerFrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/local_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Local ip"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/img_1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:tint="#606060"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/img_2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:tint="#606060"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/img_3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:tint="#606060"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/img_4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:tint="#606060"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/img_5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:tint="#606060"
        android:layout_marginStart="5dp"/>
</LinearLayout>
    <TextView
        android:id="@+id/local_mac"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:layout_marginTop="3dp"

        android:textSize="10dp"
        android:text="Mac address: "
        />
        <TextView
            android:id="@+id/local_manufacture"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:layout_marginTop="3dp"

            android:textSize="12dp"
            android:text="Manufacrute: "
            />



</LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">





            </LinearLayout>




    </LinearLayout>
</LinearLayout>

</com.google.android.material.card.MaterialCardView>


</RelativeLayout>
