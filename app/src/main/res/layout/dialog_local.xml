<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materialCardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    android:layout_gravity="center"
    android:backgroundTint="#eff4fa"
    app:strokeWidth="1dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="-38dp"
            android:layout_marginBottom="-38dp"
            android:src="@drawable/radar"
            android:rotation="-30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:tint="@color/blue7" />
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/device_img"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/devices"
                        app:tint="@color/blue1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Ports"
                        android:id="@+id/port"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Device name"
                            android:textSize="18sp"
                            app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                            app:layout_constraintTop_toTopOf="@+id/linearLayout6" />


                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/bssid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="BSSID"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                        app:layout_constraintTop_toBottomOf="@+id/name" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manufacture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="manufacture"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                        app:layout_constraintTop_toBottomOf="@+id/bssid" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/info"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/blue1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:layout_height="380dp">
<LinearLayout
    android:id="@+id/attacks_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/bruteforce"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/passwd_brute"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/scanners_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passwords bruteforce"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/common_pins"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/msf"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/local_scanners_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vulnerability scanners"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/netexec"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_marginStart="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/spider"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/netexecer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Netexec framework"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/megacut_on"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/netcut"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/web_scanners_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disable internet access"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/megacut_off"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/enable_netcut"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/enable_netcut_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable internet access"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/own_pin"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/exploit_manager"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/router_scanners_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom scripts menu"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/passwd_brute"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/nmap"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/passwd_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nmap_scanner"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/deauth"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/generate_payload"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/payload_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate MSF payload"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/payload"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/start_attack"
                    app:tint="@color/blue1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/deauth_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Launch metaslpoit framework"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
        android:id="@+id/hs_capture"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/pixie_star"
            app:tint="@color/blue1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nmap_scanners_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate full report"
            android:textSize="16sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/question"
                    app:tint="@color/blue1" />
    </LinearLayout>
        </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>