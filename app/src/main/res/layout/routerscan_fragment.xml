<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <net.cachapa.expandablelayout.ExpandableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:el_expanded="true"

    android:id="@+id/routerpanel_expand">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nightwhite"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_ranges"
                android:paddingStart="15dp"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="180dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:scrollbars="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/nightrec"
            android:id="@+id/router_ranges_card">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="11dp"
                android:scrollbars = "vertical"
                android:id="@+id/router_ranges_text"/>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ports"
                android:paddingStart="15dp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="75dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:scrollbars="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/nightrec"
            android:id="@+id/router_port_card">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="11dp"
                android:scrollbars = "vertical"
                android:id="@+id/router_ports"/>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/router_save"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/save"
                    android:tint="@color/grey"
                    />
                <ImageView
                    android:id="@+id/router_settings_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/settings"
                    android:tint="@color/grey"
                    />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans"
                android:text="@string/start"
                android:textSize="12dp"
                app:icon="@drawable/run"
                app:iconSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"

        android:id="@+id/router_toggle"
        >
        <ImageView
            android:id="@+id/router_toggle_img"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/nightwhite"
            android:src="@drawable/arrow_down"
            android:layout_gravity="center"
            android:rotation="180"
            android:tint="#606060"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routerscan_items"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/ping_progressbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:indicatorColor="@color/blue2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"

            app:trackCornerRadius="5dp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/roterscan_progressbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:indicatorColor="@color/blue"
            app:trackCornerRadius="5dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rs_threads"
            android:layout_marginStart="5dp"
            android:text="..."
            android:layout_weight="1" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle"
            android:tint="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rs_ok"
            android:text="0"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle"
            android:layout_marginLeft="5dp"
            android:tint="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rs_pinged"
            android:text="0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>